@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Exam.Localization
@using Exam.Web.Pages.ProgressEntries
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Exam.ProgressEntries;
@using System.Globalization
@inject IHtmlLocalizer<ExamResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/ProgressEntries/EditModal" autocomplete="off">
    <abp-modal id="ProgressEntryEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>

                    <abp-input asp-for="Id" />
                    
                    <abp-input asp-for="ProgressEntry.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    

            <abp-input asp-for="ProgressEntry.Value"   />

                                <abp-select asp-for="ProgressEntry.ChallengeId" asp-items="Model.ChallengeLookupListRequired" label="@L["Challenge"].Value"/>            <abp-select asp-for="ProgressEntry.IdentityUserId" asp-items="Model.IdentityUserLookupListRequired" label="@L["IdentityUser"].Value"/>
                


        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">

        </abp-modal-footer>
    </abp-modal>
</form>
