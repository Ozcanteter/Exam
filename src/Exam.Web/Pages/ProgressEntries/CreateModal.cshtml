@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Exam.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Exam.Web.Pages.ProgressEntries
@using Exam.ProgressEntries;
@using System.Globalization
@inject IHtmlLocalizer<ExamResource> L
@model CreateModalModel
@{
    Layout = null;
}


<form data-ajaxForm="true" asp-page="/ProgressEntries/CreateModal" autocomplete="off">
    <abp-modal id="ProgressEntryCreateModal">
        <abp-modal-header title="@L["NewProgressEntry"].Value"></abp-modal-header>

        <abp-modal-body>

                    
                    

            <abp-input asp-for="ProgressEntry.Value"   />

                                <abp-select asp-for="ProgressEntry.ChallengeId" asp-items="Model.ChallengeLookupListRequired" label="@L["Challenge"].Value"/>            <abp-select asp-for="ProgressEntry.IdentityUserId" asp-items="Model.IdentityUserLookupListRequired" label="@L["IdentityUser"].Value"/>
                


        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">

        </abp-modal-footer>
    </abp-modal>
</form>
