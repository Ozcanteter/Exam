@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Exam.Localization
@using Exam.Web.Pages.Challenges
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Exam.Challenges;
@using System.Globalization
@inject IHtmlLocalizer<ExamResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Challenges/EditModal" autocomplete="off">
    <abp-modal id="ChallengeEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>

                    <abp-input asp-for="Id" />
                    
                    <abp-input asp-for="Challenge.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    

            <abp-input asp-for="Challenge.Name"   />

            <abp-date-picker auto-update-input="true" today-button-classes="btn-primary" asp-for="Challenge.StartDate"  />
            <abp-date-picker auto-update-input="true" today-button-classes="btn-primary" asp-for="Challenge.EndDate"  />

            <abp-input asp-for="Challenge.Goal"   />


            <abp-input asp-for="Challenge.IsActive"   />

                    
                


        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">

        </abp-modal-footer>
    </abp-modal>
</form>
